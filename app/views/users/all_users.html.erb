<div class="row">
  <aside class="col-md-3">
    <section class="user_info">
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
      </h1>
    </section>
  </aside>
  <div class="col-md-9">
    <h2 style="font-weight:bold; font-size: 2em;">ユーザー　一覧</h2>
    <% @all_users.each do |all| %>
    <% if all != current_user %>
    <div class="col-md-4", style="height:150px; border:1px solid; border-radius:10px; padding:5px; margin-bottom: 5px;">
      <%= gravatar_for all %>
      <%= link_to all.name, user_path(all.id), class: "btn btn-xs btn-primary" %>
      <br>
      <%= truncate all.profile, :length =>60 %>
    </div>
    <% end %>
    <% end %>
  </div>
</div>