<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
      </h1>
    </section>
  </aside>
  <div class="col-md-8">
    <%= render 'follow_form' if logged_in? %>
    <% if @user.microposts.any? %>
      <h3>Microposts (<%= @user.microposts.count %></h3>
      <ol class="microposts">
        <%= render @microposts %>
      </ol>
    <% end %>  
  </div>
</div>

<div class="row">
  <div class="col-md-10 col-md-offset-2">
  　<p style="overflow:hidden;"><span class="col-md-2">プロフィール</span><span class="panel panel-default col-md-10"><%= @user.profile %></span></p>
    <p style="overflow:hidden;"><span class="col-md-2">メールアドレス</span><span class="panel panel-default col-md-10"><%= @user.email %></span></p>
    <p style="overflow:hidden;"><span class="col-md-2">居住地</span><span class="panel panel-default col-md-10"><%= @user.area %></span></p>
  </div>
</div>    
